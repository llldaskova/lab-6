<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:lab_6.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="lab_6.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="lab_6">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	<StackPanel>
	<ItemsControl Items="{Binding Items}">
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<Grid RowDefinitions="*" ColumnDefinitions="*,0.25*" ShowGridLines="True">
				<TextBlock Text="{Binding Name}" Grid.Row="0" Grid.Column="0"/>
				</Grid>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
		
	</ItemsControl>
		<Button Command="{Binding AddNoteButton}"  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"   >Добавить</Button>
		
	
		</StackPanel>
</Window>
